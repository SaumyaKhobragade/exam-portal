<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Admin Dashboard - Exam Portal</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/adminDashboard.css" />
  <link rel="stylesheet" href="/stylesheets/rankings.css" />
</head>
<body>
  <div class="main-container">
    <header class="header-section fade-in">

      <div class="brand-logo">
        <i class="fas fa-shield-alt"></i> CodeSecure
      </div>
      <div class="organization-header">
        <span class="org-name-header" id="organizationNameHeader">Loading...</span>
      </div>
      <nav class="navigation-menu">
        <a href="/admin-dashboard" class="nav-link active">
          <i class="fas fa-tachometer-alt"></i> Dashboard
        </a>
        <a href="/admin/exams/create" class="nav-link">
          <i class="fas fa-plus-circle"></i> Create Exam
        </a>
        <a href="#" class="nav-link" onclick="showResults()">
          <i class="fas fa-chart-bar"></i> Results
        </a>
      </nav>
      <div class="user-actions">
        <div class="user-info">
          <i class="fas fa-user-shield"></i>
          <span id="adminName"><%= user ? user.fullname || user.username : 'Admin' %></span>
        </div>
        <a href="/logout" class="action-btn logout-btn">
          <i class="fas fa-sign-out-alt"></i> Logout
        </a>
      </div>
    </header>

    <main class="content-area">
      <!-- Success/Error Messages -->
      <% if (typeof success !== 'undefined' && success === 'exam-created') { %>
        <div class="alert alert-success" style="background: #d4edda; color: #155724; padding: 1rem; border-radius: 8px; margin-bottom: 1rem; border: 1px solid #c3e6cb;">
          <strong>Success!</strong> Exam created successfully with valid test cases.
        </div>
      <% } %>
      
      <% if (typeof success !== 'undefined' && success === 'exam-created-with-warnings') { %>
        <div class="alert alert-warning" style="background: #fff3cd; color: #856404; padding: 1rem; border-radius: 8px; margin-bottom: 1rem; border: 1px solid #ffeaa7;">
          <strong>Warning!</strong> Exam created but some test cases failed validation. Please review and update test cases if needed.
        </div>
      <% } %>
      
      <% if (typeof success !== 'undefined' && success === 'exam-created-validation-error') { %>
        <div class="alert alert-warning" style="background: #fff3cd; color: #856404; padding: 1rem; border-radius: 8px; margin-bottom: 1rem; border: 1px solid #ffeaa7;">
          <strong>Notice!</strong> Exam created but test case validation encountered an error. You can manually verify test cases later.
        </div>
      <% } %>
      
      <% if (typeof error !== 'undefined') { %>
        <div class="alert alert-error" style="background: #f8d7da; color: #721c24; padding: 1rem; border-radius: 8px; margin-bottom: 1rem; border: 1px solid #f5c6cb;">
          <strong>Error!</strong> <%= error %>
        </div>
      <% } %>


      <!-- Welcome Section -->
      <section class="welcome-section slide-up">
        <div class="welcome-card">
          <div class="welcome-content">
            <h1 class="welcome-title">
              <i class="fas fa-crown"></i>
              Welcome to Admin Dashboard
            </h1>
            <p class="welcome-description">Manage your organization's exams, view results, and monitor student performance with ease</p>

          </div>
          <div class="welcome-illustration">
            <i class="fas fa-chalkboard-teacher"></i>
          </div>
        </div>
      </section>


      <!-- Dashboard Section: Exam Cards + Your Exams -->
      <div class="dashboard-section slide-up">
        <div class="exam-management">
          <div class="exam-card">
            <div class="exam-card-icon">
              <i class="fas fa-plus-circle"></i>
            </div>
            <h3>Create New Exam</h3>
            <p>Set up a new examination for your organization with coding challenges, MCQs, or mixed formats.</p>
            <a href="/admin/exams/create" class="btn btn-primary">
              <i class="fas fa-plus"></i> Create Exam
            </a>
          </div>
          <div class="exam-card">
            <div class="exam-card-icon">
              <i class="fas fa-chart-bar"></i>
            </div>
            <h3>View Results</h3>
            <p>Monitor exam results, student performance, and generate detailed reports for analysis.</p>
            <button class="btn btn-success" onclick="showResults()">
              <i class="fas fa-eye"></i> View Results
            </button>
          </div>
        </div>
        <section class="current-exams">
          <div class="section-header">
            <h2 class="section-title">
              <i class="fas fa-file-alt"></i> Your Exams
            </h2>
            <div class="exam-count" id="examCount"></div>
          </div>
          <div class="exams-container" id="examsContainer">
            <!-- Exams will be loaded here -->
          </div>
        </section>
      </div>
      <!-- End Dashboard Section -->

      <!-- Assigned Exams Section -->
      <!-- <div class="assigned-exams">
        <h2>Your Assigned Exam Requests</h2>
        <div class="exam-list" id="assignedExamsList">
          <p>Loading assigned exams...</p>
        </div>
      </div> -->


      <!-- Stats Section -->
      <section class="stats-section slide-up">
        <div class="stat-card">
          <div class="stat-icon">
            <i class="fas fa-file-alt"></i>
          </div>
          <div class="stat-content">
            <div class="stat-number" id="totalExams"><%= stats ? stats.total : 0 %></div>
            <div class="stat-label">Total Exams</div>
            <div class="stat-change" id="examsChange">
              <% if (userType === 'admin') { %>
                Created/Assigned
              <% } else { %>
                Owned
              <% } %>
            </div>
          </div>
        </div>
        <div class="stat-card">
          <div class="stat-icon">
            <i class="fas fa-play-circle"></i>
          </div>
          <div class="stat-content">
            <div class="stat-number" id="activeExams"><%= stats ? stats.active : 0 %></div>
            <div class="stat-label">Active Exams</div>
            <div class="stat-change" id="activeChange">Currently Running</div>
          </div>
        </div>
        <div class="stat-card">
          <div class="stat-icon">
            <i class="fas fa-user-shield"></i>
          </div>
          <div class="stat-content">
            <div class="stat-number" id="userType">
              <% if (userType === 'owner') { %>
                OWNER
              <% } else if (userType === 'admin') { %>
                ADMIN
              <% } else { %>
                USER
              <% } %>
            </div>
            <div class="stat-label">Role</div>
            <div class="stat-change" id="roleInfo">
              <% if (user) { %>
                <%= user.username %>
              <% } %>
            </div>
          </div>
        </div>
      </section>

      <!-- Results and Rankings Section -->
      <section class="results-section slide-up" id="resultsSection" style="display: none;">
        <div class="section-header">
          <h2 class="section-title">
            <i class="fas fa-trophy"></i> Student Rankings & Performance
          </h2>
          <button class="btn btn-secondary" onclick="hideResults()">
            <i class="fas fa-times"></i> Close
          </button>
        </div>
        
        <div class="rankings-filters">
          <div class="filter-group">
            <label for="examFilter">Filter by Exam:</label>
            <select id="examFilter" onchange="filterRankings()">
              <option value="all">All Exams</option>
            </select>
          </div>
          <div class="filter-group">
            <label for="sortBy">Sort by:</label>
            <select id="sortBy" onchange="sortRankings()">
              <option value="overall">Overall Score</option>
              <option value="correctness">Correctness</option>
              <option value="codeQuality">Code Quality</option>
              <option value="efficiency">Efficiency</option>
              <option value="bestPractices">Best Practices</option>
              <option value="timeScore">Time Management</option>
            </select>
          </div>
        </div>

        <div class="rankings-table-container">
          <table class="rankings-table">
            <thead>
              <tr>
                <th>Rank</th>
                <th>Student</th>
                <th>Overall Score</th>
                <th>Correctness</th>
                <th>Code Quality</th>
                <th>Efficiency</th>
                <th>Best Practices</th>
                <th>Time Score</th>
                <th>Exam Count</th>
                <th>Last Activity</th>
              </tr>
            </thead>
            <tbody id="rankingsTableBody">
              <tr class="loading-row">
                <td colspan="10">
                  <i class="fas fa-spinner fa-spin"></i> Loading rankings...
                </td>
              </tr>
            </tbody>
          </table>
        </div>

        <div class="rankings-stats">
          <div class="stat-card">
            <h3>Performance Overview</h3>
            <div class="performance-metrics">
              <div class="metric">
                <span class="metric-label">Average Overall Score:</span>
                <span class="metric-value" id="avgOverallScore">-</span>
              </div>
              <div class="metric">
                <span class="metric-label">Top Performer:</span>
                <span class="metric-value" id="topPerformer">-</span>
              </div>
              <div class="metric">
                <span class="metric-label">Most Improved:</span>
                <span class="metric-value" id="mostImproved">-</span>
              </div>
              <div class="metric">
                <span class="metric-label">Active Students:</span>
                <span class="metric-value" id="activeStudents">-</span>
              </div>
            </div>
          </div>
        </div>
      </section>

