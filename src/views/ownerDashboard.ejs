<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Owner Dashboard - CodeSecure</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/ownerDashboard.css">
</head>
<body>
    <div class="main-container">
        <!-- Header Section -->
        <header class="header-section fade-in">
            <div class="brand-logo">
                <i class="fas fa-crown"></i> CodeSecure
            </div>
            <nav class="navigation-menu">
                <a href="/owner-dashboard" class="nav-link active">
                    <i class="fas fa-tachometer-alt"></i> Dashboard
                </a>
                <a href="#" class="nav-link" onclick="showAnalytics()">
                    <i class="fas fa-chart-bar"></i> Analytics
                </a>
                <a href="#" class="nav-link" onclick="showSettings()">
                    <i class="fas fa-cog"></i> Settings
                </a>
                <a href="#" class="nav-link" onclick="showReports()">
                    <i class="fas fa-file-alt"></i> Reports
                </a>
            </nav>
            <div class="user-actions">
                <span id="ownerName">
                    <i class="fas fa-crown"></i> <%= user ? user.fullname || user.username : 'Owner' %>
                </span>
                <button class="action-btn logout-btn" onclick="logout()">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </button>
            </div>
        </header>

        <!-- Dashboard Container -->
        <div class="dashboard-container">
            <!-- Owner Header -->
            <div class="owner-header slide-up">
                <div class="owner-title">
                    <i class="fas fa-crown"></i> Owner Dashboard
                </div>
                <div class="owner-subtitle">
                    Complete control and management of the CodeSecure platform
                </div>
            </div>

            <!-- Dashboard Message -->
            <div id="dashboardMessage" class="message"></div>

            <!-- Statistics Section -->
            <div class="stats-grid slide-up">
                <div class="stat-card">
                    <div class="stat-number" id="totalUsers">0</div>
                    <div class="stat-label">
                        <i class="fas fa-users"></i> Total Users
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-number" id="adminCount">0</div>
                    <div class="stat-label">
                        <i class="fas fa-user-tie"></i> Admins
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-number" id="userCount">0</div>
                    <div class="stat-label">
                        <i class="fas fa-user-graduate"></i> Students
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-number" id="approvedRequests">0</div>
                    <div class="stat-label">
                        <i class="fas fa-handshake"></i> Approved Access Requests
                    </div>
                </div>
            </div>

            <!-- Organization Access Request Management Section -->
            <div class="exam-requests-section dashboard-section slide-up">
                <div class="section-header">
                    <h2 class="section-title">
                        <i class="fas fa-building"></i> Organization Access Requests
                    </h2>
                </div>
                <div id="examRequestsList">
                    <!-- Exam requests will be loaded here dynamically -->
                </div>
            </div>

            <!-- Admin Management Section -->
            <div class="admin-management-section slide-up">
                <h2 class="section-title">
                    <i class="fas fa-user-cog"></i> Admin Management
                </h2>
                
                <!-- Message for admin operations -->
                <div id="message" class="message"></div>
                
                <!-- Admin List -->
                <div class="admin-list">
                    <h3 class="section-title">
                        <i class="fas fa-list"></i> Current Admins
                    </h3>
                    <div id="adminsList">
                        <!-- Admins will be loaded here dynamically -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Organization Access Request Review Modal -->
    <div id="reviewModal" class="modal" style="display: none;">
        <div class="modal-content">
            <div class="modal-header">
                <h2><i class="fas fa-building-user"></i> Review Access Request</h2>
                <span class="close" id="closeReviewModal">&times;</span>
            </div>
            <div class="modal-body">
                <div id="requestDetails">
                    <!-- Request details will be loaded here -->
                </div>
                <div class="form-group">
                    <label for="reviewStatus" class="form-label">
                        <i class="fas fa-tasks"></i> Decision
                    </label>
                    <select id="reviewStatus" class="form-input">
                        <option value="">Select Decision</option>
                        <option value="approved">Approve</option>
                        <option value="rejected">Reject</option>
                    </select>
                </div>
                <div id="adminAssignmentGroup" class="form-group" style="display: none;">
                    <label for="assignedAdmin" class="form-label">
                        <i class="fas fa-user-tie"></i> Assign to Admin
                    </label>
                    <select id="assignedAdmin" class="form-input">
                        <option value="">Select Admin</option>
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="closeReviewModalBtn">
                    <i class="fas fa-times"></i> Cancel
                </button>
                <button type="button" class="btn btn-primary" id="approveRequestBtn">
                    <i class="fas fa-check"></i> Approve
                </button>
                <button type="button" class="btn btn-danger" id="rejectRequestBtn">
                    <i class="fas fa-times"></i> Reject
                </button>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="/javascripts/sessionProtection.js"></script>
    <script src="/javascripts/ownerDashboard.js"></script>
    <script>
        function logout() {
            if (confirm('Are you sure you want to logout?')) {
                fetch('/logout', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => {
                    if (response.ok) {
                        window.location.href = '/';
                    } else {
                        alert('Logout failed. Please try again.');
                    }
                })
                .catch(error => {
                    console.error('Logout error:', error);
                    alert('An error occurred during logout.');
                });
            }
        }

        // Initialize dashboard animations
        document.addEventListener('DOMContentLoaded', function() {
            // Add staggered animation delays
            const elements = document.querySelectorAll('.slide-up');
            elements.forEach((element, index) => {
                element.style.animationDelay = `${index * 0.1}s`;
            });
        });
    </script>
</body>
</html>
